<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("language.en"), root_path(locale: :en) %></li>
        <li><%= link_to t("language.vi"), root_path(locale: :vi) %></li>
        <li><%= link_to t("layout.header.menu.home"), home_path %></li>
        <li><%= link_to t("layout.header.menu.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("user.login.user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t "user.login.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.login.profile"), current_user %></li>
              <li><%= link_to t("user.login.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("user.login.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout.header.menu.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
