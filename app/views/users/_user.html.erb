<li>
  <%= gravatar_for user, size: Settings.size.s_50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t("user.update.delete"), user, method: :delete,
                                  data: { confirm: t("user.update.you_sure")} %>
  <% end %>
</li>
