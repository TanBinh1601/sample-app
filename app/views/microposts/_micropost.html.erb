<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image, height: "300" if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t("micropost.time_post", time: time_ago_in_words(micropost.created_at)) %>
    <% if current_user? micropost.user %>
      <%= link_to t("user.update.delete"), micropost, method: :delete,
        data: {confirm: t("user.update.you_sure")} %>
    <% end %>
  </span>
</li>

