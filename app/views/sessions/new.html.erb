<% provide :title, t("title.login") %>
<h1><%= t"title.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label t "user.new.email" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t"user.new.pass" %>
      <%= link_to t("user.login.forgot_pass"), password_resets_new_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "user.login.remember" %></span>
      <% end %>
      <%= f.submit t("title.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "user.login.new_user" %><%= link_to t("static_pages.home.sigup"), signup_path %></p>
  </div>
</div>
